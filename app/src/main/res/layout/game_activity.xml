<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="gameViewModel"
            type="ru.cybernut.fiveseconds.view.GameViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_clean"
        tools:context=".MainGameActivity">

        <FrameLayout
            android:id="@+id/question_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/question_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{gameViewModel.currentQuestionText}" />

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/next_question_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:onClick="onNextQuestionButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/next_question_button" />

    </android.support.constraint.ConstraintLayout>
</layout>